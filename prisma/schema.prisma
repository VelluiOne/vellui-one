// Configuração do Banco
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// MODELO DE EMPRESA (O Tenant)
model Company {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos:
  users     User[]
  customers Customer[] 
}

// MODELO DE USUÁRIO
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   @default("123456")

  // Cada usuário pertence a uma empresa
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MODELO DE CLIENTE
model Customer {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  document    String?  
  
  // FINANCEIRO E FUNIL
  value       Float    @default(0) 
  stage       String   @default("LEAD") 
  status      String   @default("ACTIVE") 

  // INTELIGÊNCIA COMERCIAL
  source      String?  
  priority    String   @default("MEDIA") 
  lossReason  String?  
  notes       String?  
  
  // ISOLAMENTO MULTI-TENANT
  company     Company  @relation(fields: [companyId], references: [id])
  companyId   String

  // RELACIONAMENTO COM ATIVIDADES
  activities  Activity[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
}

model Activity {
  id           String    @id @default(cuid())
  customerId   String
  type         String    // NOTE ou MEETING
  content      String   
  meetingLink  String?
  scheduledTo  DateTime? 
  
  // ADICIONE ESTA LINHA ABAIXO:
  completed    Boolean   @default(false) 
  
  createdAt    DateTime  @default(now())
  customer     Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}