// Configuração do Banco
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// MODELO DE EMPRESA (O Tenant)
model Company {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos:
  users     User[]
  customers Customer[] 
}

// MODELO DE USUÁRIO
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   @default("123456")

  // A CHAVE DE OURO: Cada usuário obrigatoriamente pertence a uma empresa
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MODELO DE CLIENTE (Com Valor e Estágio para o Kanban)
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  document  String?  // CPF ou CNPJ
  
  // NOVO: Valor do Negócio (Dinheiro)
  value     Float    @default(0) 
  
  // NOVO: Estágio do Funil (Prepara para o Kanban)
  // Ex: "LEAD", "CONTATO", "PROPOSTA", "FECHADO"
  stage     String   @default("LEAD") 
  
  status    String   @default("ACTIVE") 
  
  // ISOLAMENTO MULTI-TENANT
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}