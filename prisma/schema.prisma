// Configuração do Banco
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// MODELO DE EMPRESA (O Tenant)
model Company {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos:
  users     User[]
  customers Customer[] 
}

// MODELO DE USUÁRIO
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   @default("123456")

  // Cada usuário pertence a uma empresa
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MODELO DE CLIENTE (Evoluído para CRM Profissional)
model Customer {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  document    String?  // CPF ou CNPJ
  
  // FINANCEIRO E FUNIL
  value       Float    @default(0) 
  stage       String   @default("LEAD") // LEAD, NEGOCIACAO, FECHADO, PERDIDO
  status      String   @default("ACTIVE") 

  // INTELIGÊNCIA COMERCIAL (Novos campos)
  source      String?  // Ex: Instagram, Google, Indicação, WhatsApp
  priority    String   @default("MEDIA") // BAIXA, MEDIA, ALTA
  lossReason  String?  // Motivo da perda (Preço, Concorrente, Prazo, etc)
  notes       String?  // Histórico de conversas / Observações técnicas
  
  // ISOLAMENTO MULTI-TENANT
  company     Company  @relation(fields: [companyId], references: [id])
  companyId   String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
}